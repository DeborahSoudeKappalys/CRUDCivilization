{% extends 'base.html.twig' %}
{% block title %}Éditer un joueur{% endblock %}

{% block body %}
<div class="form">
    <h1>Éditer un joueur</h1>
    {{ form_start(form) }}
    <div id="form">
    <div>
    <label>Nom du joueur :</label>
      {{ form_widget(form.name) }}
    </div>
    <div>
    <label>Titre de noblesse :</label>
      {{ form_widget(form.title) }}
    </div>
    <div>
    <label>Couleur jouée :</label>
      {{ form_widget(form.color) }}
    </div>
    <div>
      {{ form_widget(form.save) }}
    </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}